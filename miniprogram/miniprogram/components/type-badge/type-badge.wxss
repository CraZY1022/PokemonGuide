.badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--radius-badge, 8rpx); /* V1.1: 4px */
  padding: 4rpx 12rpx;
  margin-right: 8rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1); /* V1.1: Shadow */
}

.badge.small {
  height: 32rpx;
  padding: 0 10rpx;
}

.badge.small .text {
  font-size: 20rpx;
  font-weight: 600; /* Semibold */
}

.badge.medium {
  height: 48rpx;
  padding: 0 20rpx;
  border-radius: 24rpx; /* Keep pill shape for header badges? Or unify? Spec says 4px radius. Let's stick to spec radius generally but medium might want to be pill? PRD says "Try Capsule or Flattened". Let's use pill for medium to differentiate. */
  border-radius: 8rpx; /* Unified to micro-radius as per V1.1 Spec "Micro radius" */
}

.badge.medium .text {
  font-size: 24rpx;
  font-weight: 600;
}

.badge .text {
  color: #FFFFFF;
  line-height: 1;
  font-family: "PingFang SC", sans-serif;
  text-shadow: 0 1px 1px rgba(0, 0, 0, 0.1);
}
