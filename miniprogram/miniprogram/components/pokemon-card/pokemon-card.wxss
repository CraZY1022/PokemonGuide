.card {
  background: var(--color-surface);
  border-radius: var(--radius-normal);
  padding: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  transition: all 0.2s ease;
  height: 100%;
  box-sizing: border-box;
}

.card .image-wrapper {
  width: 100%;
  height: 180rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: transparent;
}

.card .image-wrapper .pokemon-img {
  width: 100%;
  height: 100%;
}

.card .info {
  margin-top: 12rpx;
}

.card .info .header {
  display: flex;
  justify-content: flex-start;
  margin-bottom: 4rpx;
}

.card .info .header .id {
  font-size: 20rpx;
  color: var(--text-sub);
  font-weight: bold;
}

.card .info .name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-main);
  margin-bottom: 8rpx;
  display: block;
}

.card .info .types {
  display: flex;
  flex-wrap: wrap;
}

.card-hover {
  transform: scale(0.98);
  opacity: 0.9;
}
