page {
  background-color: #F5F7FA;
}

.container {
  padding-bottom: 40rpx;
}

.hero-section {
  height: 500rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  background-color: #F5F7FA;
}

.hero-section .image-stack {
  position: relative;
  width: 400rpx;
  height: 400rpx;
  z-index: 1;
}

.hero-section .visual-img {
  width: 400rpx;
  height: 400rpx;
  position: absolute;
  top: 0;
  left: 0;
  transition: opacity 0.3s ease-in-out; /* Cross-fade duration */
}

.hero-section .visual-img.visible {
  opacity: 1;
}

.hero-section .visual-img.hidden {
  opacity: 0;
}

.hero-section .toggle-wrapper {
  position: absolute;
  bottom: 40rpx;
  right: 40rpx;
  z-index: 10;
}

/* V1.1 Shiny Toggle Style */
.hero-section .toggle-wrapper .toggle-btn {
  background: rgba(255, 255, 255, 0.9);
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%; /* Circle */
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border: 1px solid #EEEEEE;
  transition: all 0.2s ease;
}

.hero-section .toggle-wrapper .toggle-btn.btn-hover {
  transform: scale(0.9);
}

.hero-section .toggle-wrapper .toggle-btn .shiny-icon {
  font-size: 32rpx;
  color: #999999;
  line-height: 1;
}

.hero-section .toggle-wrapper .toggle-btn.active {
  background: linear-gradient(135deg, #FFFDE7 0%, #FFFFFF 100%);
  border-color: #F7D02C;
  box-shadow: 0 0 16rpx rgba(247, 208, 44, 0.4); /* Glow effect */
}

.hero-section .toggle-wrapper .toggle-btn.active .shiny-icon {
  color: #F7D02C;
  text-shadow: 0 0 8rpx rgba(247, 208, 44, 0.6);
}

.info-card {
  margin-top: -30rpx;
  background: #FFFFFF;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  padding: 40rpx;
  position: relative;
  z-index: 2;
  min-height: 50vh;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.02);
}

.info-card .header {
  margin-bottom: 32rpx;
}

.info-card .header .title-row {
  display: flex;
  align-items: baseline;
}

.info-card .header .title-row .name {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--text-main);
  margin-right: 16rpx;
}

.info-card .header .title-row .id {
  font-size: 32rpx;
  color: var(--text-sub);
  font-weight: 500;
  margin-right: 16rpx;
}

.info-card .header .name-en {
  font-size: 28rpx;
  color: var(--text-sub);
  font-weight: 400;
  font-style: italic;
}

.info-card .section {
  margin-bottom: 40rpx;
}

.info-card .section .section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-main);
  margin-bottom: 16rpx;
  display: block;
}

.info-card .section .types-row {
  display: flex;
}

.info-card .section.desc-box .desc-text {
  font-size: 30rpx;
  color: var(--text-body);
  line-height: 1.6;
  text-align: justify;
}

.info-card .section.meta-row {
  padding-top: 20rpx;
  border-top: 1px solid #EEE;
}

.info-card .section.meta-row .meta-item {
  display: flex;
  align-items: center;
}

.info-card .section.meta-row .meta-item .label {
  font-size: 26rpx;
  color: var(--text-sub);
  width: 100rpx;
}

.info-card .section.meta-row .meta-item .value {
  font-size: 26rpx;
  color: var(--text-main);
  font-weight: 500;
}

.loading {
  text-align: center;
  padding: 100rpx;
  color: var(--text-sub);
}
