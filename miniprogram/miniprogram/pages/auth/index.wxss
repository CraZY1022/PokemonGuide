.auth-container {
  min-height: 100vh;
  background-color: var(--color-bg);
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.auth-container .logo-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.auth-container .logo-area .logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.auth-container .logo-area .app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-main);
}

.auth-container .form-card {
  background: #FFFFFF;
  border-radius: var(--radius-large);
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.auth-container .form-card .title {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--text-main);
  margin-bottom: 40rpx;
  display: block;
}

.auth-container .form-card .input-group {
  margin-bottom: 32rpx;
}

.auth-container .form-card .input-group .label {
  font-size: 28rpx;
  color: var(--text-main);
  margin-bottom: 12rpx;
  display: block;
  font-weight: 500;
}

.auth-container .form-card .input-group .input {
  background: #F5F7FA;
  height: 88rpx;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: var(--text-main);
}

.auth-container .form-card .submit-btn {
  margin-top: 48rpx;
  background: var(--color-primary);
  color: #FFF;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.auth-container .form-card .submit-btn[disabled] {
  opacity: 0.6;
  background: var(--color-primary);
  color: #FFF !important;
}

.auth-container .form-card .footer-action {
  margin-top: 32rpx;
  display: flex;
  justify-content: center;
  font-size: 28rpx;
}

.auth-container .form-card .footer-action .hint {
  color: var(--text-sub);
  margin-right: 12rpx;
}

.auth-container .form-card .footer-action .link {
  color: var(--color-secondary);
  font-weight: 600;
}
